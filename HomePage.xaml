<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CinemaReservationApp.HomePage">
    <StackLayout Padding="10">
        <Label Text="Movies" FontSize="24" HorizontalOptions="Center" />
        <CollectionView ItemsSource="{Binding Movies}" SelectionMode="Single" SelectionChanged="OnMovieSelected">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <StackLayout Padding="10">
                        <Label Text="{Binding Title}" FontSize="18" />
                        <Label Text="{Binding Genre}" FontSize="14" TextColor="Gray" />
                    </StackLayout>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </StackLayout>
</ContentPage>
